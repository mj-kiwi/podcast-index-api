{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["es2018", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["vitest/globals"],
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
